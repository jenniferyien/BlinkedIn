<p id="notice"><%= notice %></p>

<%= image_tag @alumni.avatar %>

<p>
  <strong>Name:</strong>
  <%= @alumni.user.first_name %> <%= @alumni.user.last_name %>
</p>

<p>
  <strong>Location:</strong>
  <%= @alumni.location.city %>, <%= @alumni.location.state %>
</p>

<p>
  <strong>About:</strong>
  <%= @alumni.about %>
</p>

<p>
  <strong>What are your greatest strengths?</strong>
  <%= @alumni.q1 %>
</p>

<p>
  <strong>Have you read any good books lately?</strong>
  <%= @alumni.q2 %>
</p>

<p>
  <strong>Can you do a headstand?</strong>
  <%= @alumni.q3 %>
</p>

<p>
  <strong>Position:</strong>
  <%= @alumni.position %>
</p>

<p>
  <strong>Skills:</strong>
  <% @alumni.skills.each do |s| %>
    <button class="btn btn-primary btn-xs" type="button"><%= s.name %> <span class="badge">42</span>
</button>
  <% end  %>
</p>

<p>
  <strong>Fun fact:</strong>
  <%= @alumni.fun_fact %>
</p>

<p>
  <% @alumni.projects.each do |p| %>
    <p><%= p.name %></p>
    <a href="<%= p.url %>"><%= p.url %></a>
    <p><%= p.description %></p><br>
  <% end %>
</p>


<% @alumni.projects.each do |p| %>

<div data-toggle="modal" data-target="#myModal-<%=p.id%>">
  <strong><%= p.name %></strong><br>
 <!--  <img src="https://debbarrett.com/wp-content/uploads/2013/10/homestyler.jpg"  width="20%" height="20%"> -->
 <iframe src="<%=p.url%>" style="transform: scale(1);"></iframe>
  <p><%= p.description %></p>
</div>
<div class="modal fade" id="myModal-<%=p.id%>">
  <div class="modal-dialog modal-lg">
    <div class="modal-content modal-lg">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"> "<%= p.name %>"</h4>
      </div><!-- /.modal-header -->
      <div class="modal-body">
        <iframe name="I1" id="if1" width="100%" height="500" style="visibility:visible" src="<%= p.url %>"></iframe>
      </div><!-- /.modal-body -->
      <div class="modal-footer">
        <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
        <a target="_blank" href="<%= p.url %>" class="btn btn-primary btn-md active" role="button">Go directly to</a>

      
      </div><!-- /.modal-footer -->
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
 <% end %>
<br/>
<%= link_to 'Edit', edit_alumni_path(@alumni), class: 'btn btn-success' %>
<%= link_to 'Back', users_path, class: 'btn btn-success' %>
