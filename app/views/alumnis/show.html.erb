<div class="container">

<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-7">
    <div class="title-box clearfix">
      <% if @alumni.avatar.url %>
        <img src="<%= @alumni.avatar.url %>" class="avatar" />
      <% else %>
        <img src="/default-avatar/colors.jpg" class="avatar" />
      <% end %>

      <div class="col-info">
        <h1 class="title"><%= @alumni.user.first_name %> <%= @alumni.user.last_name %></h1>
        <h3><%= @alumni.position %></h3>
        <h4><%= "#{@alumni.location.city}, #{@alumni.location.state}" %></h4>

        <% if current_user.id == @alumni.user_id %>
          <%= link_to 'Edit', edit_alumni_path(@alumni), class: 'btn btn-default btn-sm' %>
        <% end %>

      </div>
    </div>
    <% if @alumni.skills %>
    <div class='clearfix'>
      <h4>Skills</h4>
      <% @alumni.skills.each do |s| %>
        <button class="btn btn-primary btn-xs skill" type="button">
          <%= s.name %>
          <span class="badge"><%= Endorsement.count{ |e| e.skill_id == s.id && e.alumni_id == @alumni.id } %></span>
        </button>
      <% end  %>
    </div>
    <% end %>

  </div>
  <div class='col-md-5'>
    <div class='profile-info'>
      <p><strong class="text-uppercase">About <%= @alumni.user.first_name %></strong><br/>
        <%= @alumni.about %>
      </p>
      <p><strong class="text-uppercase">"What are your greatest strengths?"</strong><br/>
        <%= @alumni.q1 %>
      </p>
      <p><strong class="text-uppercase">"Have you read any good books lately?"</strong><br/>
        <%= @alumni.q2 %>
      </p>
      <p><strong class="text-uppercase">"Can you do a handstand?"</strong><br/>
        <%= @alumni.q3 %>
      </p>
      <p><strong class="text-uppercase">Fun Fact</strong><br/>
        <%= @alumni.fun_fact %>
      </p>
    </div>
  </div>
</div>
<p class="text-right"><%= @alumni.user.first_name %>'s page has been viewed <%= @alumni.view %> times.</p>

<!-- Modal for the resume. -->

  <div class="imageContainer" data-toggle="modal" data-target="#myModal-<%=@alumni.id%>">
    <strong><%= Resume %></strong><br>
      <img src="<%=@alumni.resume.url%>" width="231" height="300">
  </div>
  <div class="modal fade" id="myModal-<%=@alumni.id%>">
    <div class="modal-dialog modal-lg">
      <div class="modal-content modal-lg">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div><!-- /.modal-header -->
        <div class="modal-body" width="300px">
          <img src="<%=@alumni.resume.url%>" width="100%">
        </div><!-- /.modal-body -->
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->

<!-- iFrame for the projects. -->

<p>
  <% @alumni.projects.each do |p| %>
    <p><%= p.name %></p>
    <a href="<%= p.url %>"><%= p.url %></a>
    <p><%= p.description %></p><br>
  <% end %>
</p>

<% @alumni.projects.each do |p| %>

  <div class="wrap" data-toggle="modal" data-target="#myModal-<%=p.id%>">
    <strong><%= p.name %></strong><br>
      <iframe src="<%=p.url%>" zoom="100%"></iframe><br>
    <p><%= p.description %></p>
  </div>
  <div class="modal fade" id="myModal-<%=p.id%>">
    <div class="modal-dialog modal-lg">
      <div class="modal-content modal-lg">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title"> "<%= p.name %>"</h4>
        </div><!-- /.modal-header -->
        <div class="modal-body">
          <iframe class="wrap" width="100%" height="650" style="visibility:visible" frameborder="1" src="<%= p.url %>"></iframe>
        </div><!-- /.modal-body -->
        <div class="modal-footer">
          <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
          <a target="_blank" href="<%= p.url %>" class="btn btn-primary btn-md active" role="button">Go directly to</a>
        </div><!-- /.modal-footer -->
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->

<% end %>

</div>
