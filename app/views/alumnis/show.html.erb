
<div class="container">

<p id="notice"><%= notice %></p>
<div>
  <div class="col-md-4">
    <div class='panel panel-default profile'>
      <img src= <%= @alumni.avatar.url %> />

      <h4 > <%= @alumni.user.first_name %> <small><small>
        <% if current_user.id == @alumni.user_id %>
        <%= link_to 'Edit', edit_alumni_path(@alumni) %>
        <% end %>
      </small></small></h4>
    </div>
    <div class='panel panel-default'>
      <p><strong>Skills:</strong></p>
      <p>
      <% @alumni.skills.each do |s| %>
        <button class="btn btn-primary btn-xs" type="button"><%= s.name %> <span class="badge"><%= Endorsement.count{ |e| e.skill_id == s.id && e.alumni_id == @alumni.id } %></span>
    </button>
      <% end  %>
      </p>
    </div>
  </div>
  <div class='col-md-8'>
      <div class= 'panel panel-info'>
          <p class='panel-heading'><strong>Title:</strong></p>
          <p class='panel-body'><%= @alumni.position %></p>
          <p class='panel-heading'><strong>Location:</strong></p>
          <p class='panel-body'><%= "#{@alumni.location.city}, #{@alumni.location.state}" %></p>
          <p class='panel-heading'><strong>About:</strong></p>
          <p class='panel-body'><%= @alumni.about %></p>
          <p class='panel-heading'><strong>Fun Fact:</strong></p>
          <p class='panel-body'> <%= @alumni.fun_fact %></p>
          <p class='panel-heading'><strong>What are your greatest strengths?</strong></p>
          <p class='panel-body'> <%= @alumni.q1 %></p>
          <p class='panel-heading'><strong>Have you read any good books lately?</strong></p>
          <p class='panel-body'> <%= @alumni.q2 %></p>
          <p class='panel-heading'><strong>Can you do a handstand?</strong></p>
          <p class='panel-body'> <%= @alumni.q3 %></p>
      </div>
  </div>
</div>

<% @alumni.projects.each do |p| %>

<div data-toggle="modal" data-target="#myModal">
  <strong><%= p.name %></strong><br>
  <img src="https://debbarrett.com/wp-content/uploads/2013/10/homestyler.jpg"  width="20%" height="20%">
  <p><%= p.description %></p>
</div>
<div class="modal fade" id="myModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content modal-lg">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"> "<%= p.name %>"</h4>
      </div><!-- /.modal-header -->
      <div class="modal-body">
        <iframe name="I1" id="if1" width="100%" height="500" style="visibility:visible" src="<%= p.url %>"></iframe>
      </div><!-- /.modal-body -->
      <div class="modal-footer">
        <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
        <a target="_blank" href="<%= p.url %>" class="btn btn-primary btn-md active" role="button">Go directly to</a>


      </div><!-- /.modal-footer -->
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
 <% end %>
<br/>

<%= link_to 'Back', users_path, class: 'btn btn-success' %>
</div>
